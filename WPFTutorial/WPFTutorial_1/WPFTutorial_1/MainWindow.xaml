        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTutorial_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Ha' din årlige indtægt efter skat klar, samt din gæld i alt" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center">


